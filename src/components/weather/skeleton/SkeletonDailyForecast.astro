---
const { class: className } = Astro.props;
---

<section class:list={["flex flex-col gap-4 p-2 lg:p-0", className]}>
    <header class="font-DMSans font-semibold text-white/50 animate-pulse">
        <div class="h-6 w-32 bg-white/10 rounded-md"></div>
    </header>

    <div class="flex-1 flex flex-col">
        <div
            class="grid grid-cols-3 grid-rows-6 gap-3 h-[500px] lg:grid-cols-7 lg:grid-rows-1 lg:flex-1 lg:items-stretch"
        >
            {
                Array.from({ length: 7 }).map(() => (
                    <div class="theme-card min-h-[140px] lg:h-full animate-pulse flex flex-col items-center justify-between p-4">
                        <div class="h-4 w-8 bg-white/10 rounded" />
                        <div class="w-12 h-12 bg-white/5 rounded-full my-2" />
                        <div class="h-4 w-12 bg-white/10 rounded" />
                    </div>
                ))
            }
        </div>
    </div>
</section>
