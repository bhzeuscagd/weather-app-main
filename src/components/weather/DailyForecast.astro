---
// ==========================================
// COMPONENTE: PRONÓSTICO DIARIO (7 DÍAS)
// ==========================================
// Muestra una grilla con el clima para los próximos 7 días.
// Responsivo: 3 columnas en móvil -> 7 columnas en escritorio.

import WeatherDataDaily from "./ui_DailyForecast/weatherDataDaily.astro";

// 1. RECEPCIÓN DE DATOS POR PROPS
const { class: className, weatherData } = Astro.props;
---

<section class:list={["flex flex-col gap-4 p-2 lg:p-0", className]}>
    <header class="font-DMSans font-semibold text-white">
        <h2>Daily Forecast</h2>
    </header>

    <div class="flex-1 flex flex-col">
        {
            /* GRID LAYOUT:
            - Mobile: 3 columnas, 6 filas (se apilan).
            - Desktop: 7 columnas, 1 fila (horizontal strip).
        */
        }
        <div
            class="grid grid-cols-3 grid-rows-6 gap-3 h-[500px] md:grid-cols-5 md:grid-rows-3 lg:grid-cols-7 lg:grid-rows-1 lg:flex-1 lg:items-stretch"
        >
            {/* Renderizado condicional del contenido de los días */}
            {
                weatherData ? (
                    <WeatherDataDaily daily={weatherData.daily} />
                ) : (
                    <div class="col-span-3 text-white/50 text-center flex items-center justify-center">
                        Cargando...
                    </div>
                )
            }
        </div>
    </div>
</section>
